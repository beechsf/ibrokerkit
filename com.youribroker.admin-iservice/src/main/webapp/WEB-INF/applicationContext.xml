<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- various property files -->

	<util:properties id="applicationProperties" location="/WEB-INF/application.properties" />
	<util:properties id="iserviceStoreProperties" location="/WEB-INF/iservicestore.properties" />

	<!-- WICKET APPLICATION -->

	<bean id="wicketApplication" class="ibrokerkit.iserviceadmin.webapplication.IServiceAdminApplication">
		<property name="properties"><ref local="applicationProperties" /></property>
		<property name="iserviceStore"><ref local="iserviceStore" /></property>
	</bean>

	<!-- iserviceStore store  -->

	<bean id="iserviceStore" class="ibrokerkit.iservicestore.store.impl.db.DatabaseStore" init-method="init">
		<constructor-arg><ref local="iserviceStoreProperties" /></constructor-arg>
	</bean>

</beans>
